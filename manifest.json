{
  "manifest_version": 2,
  "name": "Mute Twitch Ads",
  "version": "1.0",
  "description": "Mutes a tab based on the presence of a web element.",
  "permissions": ["tabs", "<all_urls>"],
  "background": {
    "scripts": ["dist/bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "twitch_ad_mute_icon.png"
    }
  }
}
