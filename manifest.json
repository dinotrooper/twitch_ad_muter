{
  "manifest_version": 2,
  "name": "Mute Twitch Ads",
  "version": "1.1",
  "description": "Will automatically mute any Twitch streams if it plays an add.",
  "permissions": ["tabs"],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "main.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "twitch_ad_mute_icon_48.png"
    }
  }
}
